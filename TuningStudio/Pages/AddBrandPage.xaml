<Page x:Class="TuningStudio.Pages.AddBrandPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TuningStudio.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddBrandPage">

    <Grid Background="#2A0B39">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="207*" MaxWidth="200"/>
            <ColumnDefinition Width="296*"/>
            <ColumnDefinition Width="297*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Image Source="../Pictures/Logo.png"  Grid.Row="0" Grid.Column="0" VerticalAlignment="Top" Margin="0,0,8,0" Height="75" />

        <Button x:Name="CloseBtn" Grid.Column="2" Grid.Row="0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="30" Height="30" BorderThickness="0" BorderBrush="Transparent" Margin="10" Click="CloseBtn_Click">
            <Button.Background>
                <ImageBrush ImageSource="/TuningStudio;component/Pictures/Close.png"/>
            </Button.Background>
        </Button>

        <Label Content="New brand" Grid.Row="1" Grid.Column="1" Foreground="#c4c4c4" FontSize="20" VerticalAlignment="Bottom" HorizontalAlignment="Center"/>
        <ComboBox x:Name="NewBrandCB" Grid.Row="2" Grid.Column="1" Width="150" Height="30" VerticalAlignment="Top" HorizontalAlignment="Center" Loaded="NewBrandTB_Loaded" SelectionChanged="NewBrandCB_SelectionChanged"/>

        <Label Content="Model" Grid.Row="1" Grid.Column="2" Foreground="#c4c4c4" FontSize="20" VerticalAlignment="Bottom"  HorizontalAlignment="Center"/>
        <ComboBox x:Name="NewModelCB" Grid.Row="2" Grid.Column="2" Width="150" Height="30" VerticalAlignment="Top" HorizontalAlignment="Center" Loaded="NewModelTB_Loaded" SelectionChanged="NewModelCB_SelectionChanged"/>

        <Label Content="Body" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" Foreground="#c4c4c4" FontSize="20" VerticalAlignment="Bottom"  HorizontalAlignment="Center"/>
        <TextBox x:Name="NewBodyTB" Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" Width="150" Height="30" VerticalAlignment="Top" HorizontalAlignment="Center" Loaded="NewBodyTB_Loaded"/>

        <Button x:Name="AddNewBrandBtn" Grid.Row="4" Grid.ColumnSpan="2" Grid.Column="1" Width="120" Height="30" VerticalAlignment="Center" HorizontalAlignment="Center" Background="Transparent" Content="Add brand" Foreground="#fff" BorderBrush="Transparent" Click="AddNewBrandBtn_Click"/>
        <Button x:Name="AddModelBtn" Grid.Row="5" Grid.ColumnSpan="2" Grid.Column="1" Width="120" Height="30" VerticalAlignment="Center" HorizontalAlignment="Center" Background="Transparent" Content="Add model" Foreground="#fff" BorderBrush="Transparent" Click="AddModelBtn_Click"/>
        <Button x:Name="AddBrandBtn" Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="6" Width="120" Height="30" VerticalAlignment="Center" HorizontalAlignment="Center" Content="Add" Click="AddBrandBtn_Click"/>
    </Grid>
</Page>
